client.focused_inactive #494d64 #24273a #cad3f5 #494d64   #494d64
client.unfocused        #363a4f #1e2030 #cad3f5 #363a4f   #363a4f
client.urgent           #d30102 #ed8796 #cad3f5 #d30102   #d30102
